extends layout 
block content
  section.p-5.jinx
    .row.d-flex.justify-content-center
      .col-5
        form.d-flex(method='post' action='/bandinfo/bands')
            input.form-control.mb-2(type= 'search' placeholder='Search for a band' aria-label='Search' name='bandname')
            button.btn(type='search', style='margin-left:10px; background: #7612f8; padding: 8px 25px; margin-left: 30px; border-radius: 4px; font-weight: 400; color: #fff;')
              | Search
    .container
      h2.text-center.heading Music Bands
      p.lead.text-center.text-white.mb-5
        | Bands from the pearl
      .row.text-center.g-4
        if bands.length 
        each band in bands
          .col-md-6.col-lg-3
            .card.special__card.text-light
              .card-body.text-center
                a(href='/bandinfo/band/'+band.bandname)
                  img.img-fluid.mb-3(src='/'+band.profilepicture alt='Band profile')
              
        
