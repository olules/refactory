extends layout 
block content
  section.p-5.jinx
    .container
      h2.text-center.heading Music labels
      p.lead.text-center.text-white.mb-5
        | labels from the pearl
      .row.text-center.g-4
        if labels.length 
        each label in labels
          .col-md-6.col-lg-3
            .card.special__card.text-light
              .card-body.text-center
                a(href='/labelinfo/label/'+label.labelname)
                  img.img-fluid.mb-3(src='/'+label.profilepicture alt='label profile')
                p.text-light #{label.labelname}  
              
        
