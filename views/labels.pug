extends layout 
block content
  section.p-5.jinx
    #searchBtn.input-group
      form.d-flex.container(method='post' action='/labelinfo/list')
          input.form-control.me-2(type='search' placeholder='Search for your label' aria-label='Search' name='stagename')
          button.btn.btn-outline-success(type='submit')
            | Search
    .container
      h2.text-center.heading Music labels
      p.lead.text-center.text-white.mb-5
        | labels from the pearl
      .row.text-center.g-4
        if labels.length 
        each label in labels
          .col-md-6.col-lg-3
            .card.special__card.text-light
              .card-body.text-center
                a(href='/labelinfo/label/'+label.labelname)
                  img.img-fluid.mb-3(src='/'+label.profilepicture alt='label profile')
                p.text-light #{label.labelname}  
              
        
