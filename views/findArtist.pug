extends layout
block content
  title= `${title}`
  body
    section.jinx.text-light.p-5.p-lg-0.pt-lg-5.mt-5.mb-5.text-center.text-sm-start
      .container
        .d-sm-flex.align-items-center.justify-content-between
          div
            h1
              span.text-warning  #{artist.stagename}
            p.lead.my-4
              | Names : #{artist.stagename}
              | Born: #{artist.artistdob}
              br
              | Number of Albums : #{artist.numberofalbums}
              br
              | Number of Songs: #{artist.numberofsongs}
              br
              | genre: #{artist.genre}
          img.img-fluid.w-50.mb-5.d-none.d-sm-block(src='/'+artist.uploadpicture width = "400px" height = "600px" alt='artist photo')
      
