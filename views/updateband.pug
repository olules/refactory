extends layout2 
block content 
    body
        .row.p-s.pt-5.p-lg-0.pt-lg-5.d-flex.justify-content-center
            .col-lg-6.jinx.text-light
                .container.border.mb-0.align-items-center
                h5.text-center.mt-3 UPDATE BAND
                    form(action="/bandinfo/update/"+band._id  method="POST" name="band__info__update" )
                        .row.container-mt-5.text-light
                            .col-sm.p-5.m-5.text-start
                                .form-action
                                    label#numofalbums(for='') Number of Albums
                                    br
                                    input#numalbums.form-control.mb-3(type='number' name='numberofalbums' value=band.bandalbums  placeholder="Input band's number of albums")
                                small#number__of__albums__error.error
                                .form-action
                                    label#numofsongs(for='') Number of Songs
                                    br
                                    input#numberOfSongs.form-control.mb-3(type='number' name='numberofsongs' value=band.bandsongs placeholder="Input band's number of songs")
                                small#number__of__songs__error.error
                                
                                .form-action
                                    label#bandowner(for='email') Email
                                    br
                                    input#email.form-control.mb-3(type='text' placeholder="Input your email" value=band.email name='email')
                                small#email__error.error
                                .form-action
                                    label#telcontact(for='') Number of members
                                    br
                                    input#telephone__contact.form-control.mb-3(type='text' placeholder="Input band's phone number" value=band.telephonecontact name='telephonecontact')
                                small#phone__number__error.error 
                                button.btn.btn-primary(type="submit") UPDATE