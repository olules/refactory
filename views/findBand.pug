extends layout 
block content 
    title= `${title}`
    body
        section.jinx.text-light.p-5.p-lg-0.pt-lg-5.mt-5.mb-5.text-center.text-sm-start
        .container
            .d-sm-flex.align-items-center.justify-content-between
            div
                h1
                span.text-warning  #{band.bandname}
                p.lead.my-4
                | Names : #{band.bandname}
                | Started on: #{moment(band.dateofformation).format('DD/MM/YYYY')}
                br
                | Number of Albums : #{band.bandalbums}
                br
                | Number of Members: #{band.bandnumberofmembers}
                br
                | genre: #{band.genre}
            img.img-fluid.w-50.mb-5.d-none.d-sm-block(src='/'+band.profilepicture width = "400px" height = "600px" alt='band photo')
