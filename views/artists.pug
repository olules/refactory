extends layout 
block content
  section.p-5.mt-5.jinx
    .container.jinx 
      #searchBtn.input-group
        form.d-flex(method='post' action='/artistinfo/list')
            input.form-control.me-2(type='search' placeholder='Search for your artist' aria-label='Search' name='stagename')
            button.btn.btn-outline-success(type='submit')
              | Search
    .container.jinx
      h2.text-center.heading Solo Artists
      p.lead.text-center.text-white.mb-5
        | Artists from the pearl
      .row
        if artists.length 
        each artist in artists
          .col-md-6.col-lg-3
            .card.special__card.mb-5
              .card-body.text-center
                a(href='/artistinfo/artist/'+artist.stagename)
                  img.img-fluid.mb-5(src='/'+artist.uploadpicture alt='Artist picture')
              
