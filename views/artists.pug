extends layout 
block content
  section.mt-5.jinx
    .row.d-flex.justify-content-center
      .col-5
        form.d-flex(method='post' action='/artistinfo/artists')
            input.form-control.mb-2(type= 'search' placeholder='Search for an artist' aria-label='Search' name='stagename')
            button.btn(type='search', style='margin-left:10px; background: #7612f8; padding: 8px 25px; margin-left: 30px; border-radius: 4px; font-weight: 400; color: #fff;')
              | Search
    .container.jinx
      h2.text-center.heading Solo Artists
      p.lead.text-center.text-white.mb-5
        | Artists from the pearl
      .row
        if artists.length 
        each artist in artists
          .col-md-6.col-lg-3
            .card.special__card.mb-5
              .card-body.text-center
                a(href='/artistinfo/artist/'+artist.stagename)
                  img.img-fluid.mb-5(src='/'+artist.uploadpicture alt='Artist picture')
              
